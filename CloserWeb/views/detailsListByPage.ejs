        <!--================End Home Banner Area =================-->
      
    
    
    <!--==========================================-->
    <div class="container">
        
        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
        <div class="content">
            <h2 class="title"><br/>文章清單</h2>   

            <!------------------------------>
            <!-- 頁碼開始                 -->
            <!------------------------------>       
            <div class="row">
                <div class="col-md-12">
                    <ul class="pagination">
                        <li>
                            <a>第<%=pageNo%>頁</a>
                        </li>                   

                        <% if(startPage>1){ %>
                            <li>
                                <a href="/detailsListByPage?pageNo=<%=(startPage-1)%>">上一區段...</a>
                            </li>
                        <% } %> 

                        <% for(var i=startPage; i<startPage+linePerPage; i++) {%>
                            <% if(i<=totalPage){ %>
                                <li>
                                    <a href="/detailsListByPage?pageNo=<%=i%>"><%=i%></a>
                                </li>
                            <% } %> 
                        <% } %>

                        <% if(startPage+linePerPage<totalPage){ %>
                            <li>
                                <a href="/detailsListByPage?pageNo=<%=(startPage+linePerPage)%>">...下一區段</a>
                            </li>
                        <% } %>                         
                    </ul>
				
                    <!----------------------->
                    <!-- 查詢              -->
                    <!----------------------->
                    <form class="navbar-form nav navbar-right" role="search" method="get" action="/detailsSearch">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="文章內容" id="writingsContent" name="writingsContent"/>
                        </div> 
                        <p><font color="#fff">hi</font></p>
                        <button type="submit" class="btn btn-default" height="10px">
                            查詢
                        </button>
                    </form>
                </div>  
            </div>  
            <!------------------------------>
            <!-- 頁碼結束                 -->
            <!------------------------------>
                    
            <p>
                <!--~~~~~~~~~~~~~~~~~~~~~~-->
                <!-- 表格                 -->
                <!--~~~~~~~~~~~~~~~~~~~~~~--> 
                <table width="100%" border="0" class="dataListMulti_1" style="background-color:#E7E7E7;" cellpadding="5">
                    <!--~~~~~~~~~~~~~~~~~~~~~~-->
                    <!-- 表頭                 -->
                    <!--~~~~~~~~~~~~~~~~~~~~~~-->                 
                    <tr style="background-color:#cccccc">
                        <th>文章編號</th>
                        <th>文章標題</th>
                        <th>編輯</th>
                        <th>更改時間</th>
						<th>詳細</th>
                    </tr>
                    <!--~~~~~~~~~~~~~~~~~~~~~~-->                     
                    
                    <!--~~~~~~~~~~~~~~~~~~~~~~-->
                    <!-- 資料內容             -->
                    <!--~~~~~~~~~~~~~~~~~~~~~~-->                      
                    <% for(var i=0; i<data.length; i++) {%>                                     
                        <tr>
                            <td><%= data[i].writingsID %></td>
                            <td><%= data[i].writingName %></td>
                            <td><%= data[i].notes %></td>
                            <td><%= data[i].editDate %></td>
							<td><a href="/detailsOneItem?writingsID=<%= data[i].writingsID %>">查看</a></td>
                        </tr>
                    <% } %> 
                    <!--~~~~~~~~~~~~~~~~~~~~~~-->                    
                </table> 
                <!--~~~~~~~~~~~~~~~~~~~~~~-->    
            </p>	    
        </div>    
        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->  
    </div>    
    
