    <div class="container">
        
        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
        <div class="content">
            <h2 class="title">修改文章</h2>   
            
            <p>
                <!--**********************************************-->
				<!-- 上傳圖片時, method設定為post, 另設定enctype  -->
                <!--**********************************************-->				
                <form onsubmit="return confirm('是否確定更改?');" role="form" method="post" enctype="multipart/form-data" action="/detailsUpdate">			
                    <div class="form-group">                     
                        <label>文章編號(*)</label>
                        <input type="text" class="form-control" name="writingsID" value="<%= productData[0].writingsID %>" readonly/>
                    </div>

                    <div class="form-group">                     
                        <label>文章標題</label>
                        <input type="text" class="form-control" name="writingsName" value="<%= productData[0].writingsName %>"/>
                    </div>                    


                    <div class="form-group">                     
                        <label>文章內容</label>
                        <input type="text" class="form-control" name="writingsContent" value="<%= productData[0].writingsContent %>"/>
                    </div>       

                    <div class="form-group">                     
                        <label>編輯</label>
                        <input type="text" class="form-control" name="notes" value="<%= productData[0].notes %>"/>
                    </div>       

                    <div class="form-group">                     
                        <label>選擇照片(請選橫式照片, 尺寸上限為1M)</label>
                        <input type="file" accept="image/gif, image/jpeg, image/png" id="picture" name="picture"  value="<%= productData[0].picture %>"/>
                    </div>  	

                    <div class="form-group">                     
                        <label for="bookdate">修改日期</label>
                        <div class="input-append date" id="dp3" data-date-format="yyyy/mm/dd">
                            <input class="span2 form-control" type="date" name="editDate" id="bookdate" value="<%= moment(productData[0].editDate).format("YYYY-MM-DD") %>">
                            <span class="add-on"><i class="icon-th"></i></span>
                        </div>  
                    </div>   			

                    <button type="submit" class="btn btn-default">
                        更改
                    </button>
                </form>    
                <!--********************************************-->
            </p>	   
        </div>    
